{
  "coc.source.file.ignoreHidden": false,
  "coc.source.around.enable" :true,
  "coc.source.buffer.enable": false,
  "signature.enable": true,
  "coc.source.word.filetypes": ["markdown", "latex"],
  "inlayHint.enable": false,
  "diagnostic.enable": true,
  "clangd.compilationDatabaseCandidates": [
    "${workspaceFolder}",
    "${workspaceFolder}/build/",
    // "${workspaceFolder}/build/*/",
    "${workspaceFolder}/python/build/.*/",
    // "${workspaceFolder}/build_release"
    //"${workspaceFolder}/build/faster_lio",
  ],
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--header-insertion=iwyu",
    "-j=12"
  ],
  "python.pythonPath": "python3",
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": ["--extension-pkg-whitelist=pyopenvdb"],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "coc.preferences.formatOnSaveFiletypes": ["lua","cpp"],
  "explorer.root.strategies": ["workspace","cwd", "reveal", "sourceBuffer"],
  "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
  "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
  "explorer.file.child.template": "[selection | clip | 1] [indent][icon | 1] [filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5][size]",
  "explorer.filename.colored.enable": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.quitOnOpen": true,
  "explorer.position": "left",
  "explorer.file.showHiddenFiles": true,
  "explorer.file.column.clip.copy": "",
  "explorer.file.column.clip.cut": "",
  "explorer.file.reveal.auto": true,
  "explorer.file.reveal.whenOpen": true,
  "explorer.previewAction.onHover": false,
  "explorer.openAction.strategy": "sourceWindow",
  "explorer.keyMappings.global": {
    "<cr>": ["wait","expandable?",["expanded?", "collapse", "expand"],"open"],
    "v": "open:vsplit",
    "s": "open:split",
    "t": "open:tab",
    "n": "addFile",
    "N": "addDirectory"

  },
  "markdownlint.config": {
    "default": true,
    "line_length": false
  },
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/16.0.2/clangd_16.0.2/bin/clangd"
  // "clangd.path": "/usr/bin/clangd"
}
